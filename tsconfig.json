{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "allowJs": false,
        "strictNullChecks": true,
        "jsx": "react",
        "downlevelIteration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "types": ["node", "jest"],
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules/**"
    ]
}